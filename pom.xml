<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>com.biit.drools.plugins</groupId>
	<artifactId>liferay-knowledge-base</artifactId>
	<packaging>jar</packaging>
	<version>0.3.1-SNAPSHOT</version>
	<name>Liferay Knowledge Base Access For Drools Rules</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<maven-compiler-plugin.version>3.1</maven-compiler-plugin.version>
		<maven-assembly-plugin.version>2.5.3</maven-assembly-plugin.version>
		<maven-release-plugin.version>2.5.1</maven-release-plugin.version>
		<maven-scm-provider-gitexe.version>1.9.2</maven-scm-provider-gitexe.version>
		<maven-jar.version>2.4</maven-jar.version>
		<project.scm.id>git</project.scm.id>
		<!-- BiiT dependencies -->
		<plugin-manager.version>[0.2,0.3)</plugin-manager.version>
		<liferay-knowledge-base.version>[0.2,0.3)</liferay-knowledge-base.version>
		<!-- Plugin definition -->
		<plugin.id>liferay-article</plugin.id>
		<plugin.class>com.biit.drools.plugin.LiferayArticlePlugin</plugin.class>
		<plugin.version>${project.version}</plugin.version>
		<plugin.provider>BiiT Solutions</plugin.provider>
		<plugin.dependencies></plugin.dependencies>
	</properties>

	<distributionManagement>
		<repository>
			<id>central</id>
			<name>libs-releases</name>
			<url>https://dev.biit-solutions.com/artifactory/libs-release</url>
		</repository>
		<snapshotRepository>
			<id>snapshots</id>
			<name>libs-snapshot</name>
			<url>https://dev.biit-solutions.com/artifactory/libs-snapshot</url>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>scm:git:git.biit-solutions.com:DroolsRulesLiferayKnowledgeBasePlugin.git</connection>
		<developerConnection>scm:git:git.biit-solutions.com:DroolsRulesLiferayKnowledgeBasePlugin.git</developerConnection>
		<tag>drools-liferay-plugin</tag>
	</scm>

	<dependencies>
		<dependency>
			<groupId>com.biit</groupId>
			<artifactId>plugin-manager</artifactId>
			<!-- PF4J: Mandatory not include in the final jar -->
			<version>${plugin-manager.version}</version>
			<scope>compile</scope>
		</dependency>
		<dependency>
			<groupId>com.biit.liferay</groupId>
			<artifactId>liferay-knowledge-base</artifactId>
			<version>${liferay-knowledge-base.version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>${maven-compiler-plugin.version}</version>
				<configuration>
					<source>7</source>
					<target>7</target>
				</configuration>
			</plugin>
			<!-- Include dependencies inside the JAR -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-assembly-plugin</artifactId>
				<version>${maven-assembly-plugin.version}</version>
				<configuration>
					<descriptorRefs>
						<descriptorRef>jar-with-dependencies</descriptorRef>
					</descriptorRefs>
					<includes>
						<!-- PF4J: Only minimum classes. Cannot collide with existing ones 
							when deployed. -->
						<include>com/biit/drools/plugin/**/*</include>
						<!-- PF4J: Mandatory to include extensions -->
						<include>META-INF/extensions.idx</include>
					</includes>
					<finalName>${plugin.id}-plugin</finalName>
					<archive>
						<index>true</index>
						<manifest>
							<addClasspath>true</addClasspath>
						</manifest>
						<!-- PF4J: Mandatory to register the plugin. -->
						<manifestEntries>
							<Plugin-Id>${plugin.id}</Plugin-Id>
							<Plugin-Version>${plugin.version}</Plugin-Version>
							<Plugin-Provider>${plugin.provider}</Plugin-Provider>
							<Plugin-Class>${plugin.class}</Plugin-Class>
							<Plugin-Dependencies>${plugin.dependencies}</Plugin-Dependencies>
						</manifestEntries>
					</archive>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id> <!-- this is used for inheritance merges -->
						<phase>package</phase> <!-- bind to the packaging phase -->
						<goals>
							<goal>single</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jar-plugin</artifactId>
				<version>${maven-jar.version}</version>
				<executions>
					<execution>
						<id>build-liferay-article-jar</id>
						<phase>process-classes</phase>
						<goals>
							<goal>jar</goal>
						</goals>
						<configuration>
							<includes>
								<!-- PF4J: Only minimum classes. Cannot collide with existing ones 
									when deployed. -->
								<include>com/biit/drools/plugin/**/*</include>
								<include>com/biit/liferay/access/**/*</include>
								<include>com/biit/liferay/model/IArticle</include>
								<!-- PF4J: Mandatory to include extensions -->
								<include>META-INF/extensions.idx</include>
							</includes>
							<finalName>${plugin.id}-plugin</finalName>
							<archive>
								<index>true</index>
								<manifest>
									<addClasspath>true</addClasspath>
								</manifest>
								<!-- PF4J: Mandatory to register the plugin. -->
								<manifestEntries>
									<Plugin-Id>${plugin.id}</Plugin-Id>
									<Plugin-Version>${plugin.version}</Plugin-Version>
									<Plugin-Provider>${plugin.provider}</Plugin-Provider>
									<Plugin-Class>${plugin.class}</Plugin-Class>
									<Plugin-Dependencies>${plugin.dependencies}</Plugin-Dependencies>
								</manifestEntries>
							</archive>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-shade-plugin</artifactId>
				<version>3.2.1</version>
				<executions>
					<execution>
						<phase>process-classes</phase>
						<goals>
							<goal>shade</goal>
						</goals>
						<configuration>
							<finalName>${plugin.id}-shaded</finalName>
							<filters>
								<filter>
									<artifact>com.biit.liferay-knowledge-base</artifact>
									<includes>
										<include>com/biit/liferay/access/**/*</include>
										<include>com/biit/liferay/model/IArticle</include>
									</includes>
								</filter>
								<filter>
									<artifact>*:*</artifact>
									<excludes>
										<exclude>META-INF/*.SF</exclude>
										<exclude>META-INF/*.DSA</exclude>
										<exclude>META-INF/*.RSA</exclude>
									</excludes>
								</filter>
							</filters>
							<minimizeJar>true</minimizeJar>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-release-plugin</artifactId>
				<version>${maven-release-plugin.version}</version>
				<dependencies>
					<dependency>
						<groupId>org.apache.maven.scm</groupId>
						<artifactId>maven-scm-provider-gitexe</artifactId>
						<version>${maven-scm-provider-gitexe.version}</version>
					</dependency>
				</dependencies>
				<configuration>
					<checkModificationExcludes>
						<checkModificationExclude>pom.xml</checkModificationExclude>
					</checkModificationExcludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

</project>
